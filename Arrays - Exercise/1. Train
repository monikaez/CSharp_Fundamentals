// See https://aka.ms/new-console-template for more information
//A train has n number of wagons (integer, received as input).
//On the next n lines, you will receive the number of people that are going to get on each wagon.
//Print out the number of passengers in each wagon followed
//by the total number of passengers on the train.
int n = int.Parse(Console.ReadLine());
int[] peoples = new int[n];
int sum = 0;

for (int i = 0; i < peoples.Length; i++)
{
    peoples[i] = int.Parse(Console.ReadLine());
    sum += peoples[i];
}
foreach (var people in peoples)
{
    Console.Write(people + " ");
}
Console.WriteLine();
Console.Write(sum);

